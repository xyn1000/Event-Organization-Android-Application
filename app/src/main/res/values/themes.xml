<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EventPlaza" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/inter_regular</item>

    </style>
    <style name="CustomThemeOverlay_MaterialCalendar_Fullscreen" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="materialCalendarStyle">@style/Custom_MaterialCalendar.Fullscreen</item>
        <item name="colorSurface">#FFFFFF</item>
    </style>

    <style name="Custom_MaterialCalendar.Fullscreen" parent="@style/Widget.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="android:windowFullscreen">false</item>
    </style>
    <style name="Button" parent="ThemeOverlay.AppCompat.Dark">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Theme.EventPlaza.Terms">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Theme.EventPlaza.EditText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorControlActivated">@color/primary_color</item>
    </style>

    <style name="Theme.EventPlaza.Title">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/primary_color</item>

    </style>




</resources>