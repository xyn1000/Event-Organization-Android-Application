<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/yuanLogo"
        android:src="@drawable/button_frame_yuan"
        android:scaleType="fitStart"
        android:layout_margin="3dp"
        android:layout_width="10dp"
        android:layout_height="10dp"/>
    <ImageView
        android:id="@+id/fruit_image"
        android:layout_toRightOf="@id/yuanLogo"
        android:src="@drawable/icon_account"
        android:scaleType="fitStart"
        android:layout_margin="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/requestParticipantName"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/fruit_image"
        android:maxLines="1" />
    <TextView
        android:layout_below="@id/fruit_image"
        android:layout_alignParentRight="true"
        android:id="@+id/requestTime"
        android:layout_width="150dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="30dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="#000000"
        android:layout_below="@id/requestTime"/>
</RelativeLayout>