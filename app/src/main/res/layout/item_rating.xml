<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/fruit_image"
        android:src="@drawable/icon_account"
        android:scaleType="fitStart"
        android:layout_margin="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <TextView
        android:layout_toRightOf="@id/fruit_image"
        android:id="@+id/requestParticipantName"
        android:layout_width="250dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="30dp"
        android:layout_margin="5dp"/>
    <Button
        android:layout_alignParentRight="true"
        android:id="@+id/ratingStatus"
        android:background="@drawable/button_frame_shape_dark"
        android:text="Reviewed"
        android:layout_margin="5dp"
        android:layout_width="100dp"
        android:layout_height="30dp"/>
    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_below="@id/ratingStatus"
        android:layout_marginTop="3dp"
        android:numStars="5"
        android:rating="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="#000000"
        android:layout_below="@id/ratingBar"/>
</RelativeLayout>